{
  "name": "stock-screener",
  "version": "1.0.0",
  "description": "A web application for screening stocks based on fundamental parameters",
  "main": "index.html",
  "scripts": {
    "start": "python3 -m http.server 8000 2>/dev/null || python -m http.server 8000 2>/dev/null || npx http-server -p 8000",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "format": "prettier --write \"**/*.{js,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,css,md}\""
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/__tests__/**/*.test.js"],
    "collectCoverageFrom": [
      "*.js",
      "js/*.js",
      "!config.js",
      "!node_modules/**"
    ]
  },
  "keywords": [
    "stock",
    "screener",
    "finance",
    "fundamental",
    "analysis"
  ],
  "author": "TzoharLary",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/TzoharLary/StockScreener.git"
  },
  "devDependencies": {
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.0.0"
  }
}

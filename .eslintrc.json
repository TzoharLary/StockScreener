{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "globals": {
    "CONFIG": "readonly",
    "TwelveDataService": "readonly",
    "APIError": "readonly",
    "NetworkError": "readonly",
    "TimeoutError": "readonly",
    "ValidationError": "readonly",
    "escapeHtml": "readonly",
    "validateNumber": "readonly",
    "validateInteger": "readonly",
    "debounce": "readonly",
    "formatLargeNumber": "readonly",
    "getMarketCapCategory": "readonly",
    "sanitizeSearchQuery": "readonly",
    "showError": "readonly",
    "clearError": "readonly",
    "getUserFriendlyErrorMessage": "readonly",
    "logError": "readonly"
  },
  "rules": {
    "indent": ["error", 4],
    "quotes": ["error", "single", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": "off",
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "no-var": "error",
    "prefer-const": "warn",
    "arrow-spacing": "error",
    "no-trailing-spaces": "error",
    "comma-dangle": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "array-bracket-spacing": ["error", "never"],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "never",
      "asyncArrow": "always"
    }]
  }
}
